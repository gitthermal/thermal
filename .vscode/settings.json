{
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.DS_Store": true,
		"**/.git": true,
		"**/node_modules": true
	},
	"prettier.eslintIntegration": true,
	"search.exclude": {
		"**/node_modules": true
	},
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 5000,
	"eslint.validate": [
		"javascript",
		{
			"language": "vue",
			"autoFix": true
		}
	]
}
